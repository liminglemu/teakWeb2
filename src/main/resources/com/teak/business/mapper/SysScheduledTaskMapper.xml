<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.teak.business.mapper.SysScheduledTaskMapper">
  <resultMap id="BaseResultMap" type="com.teak.business.model.SysScheduledTask">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="task_name" jdbcType="VARCHAR" property="taskName" />
    <result column="cron_expression" jdbcType="VARCHAR" property="cronExpression" />
    <result column="bean_name" jdbcType="VARCHAR" property="beanName" />
    <result column="method_name" jdbcType="VARCHAR" property="methodName" />
    <result column="params" jdbcType="VARCHAR" property="params" />
    <result column="status" jdbcType="INTEGER" property="status" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="is_deleted" jdbcType="INTEGER" property="isDeleted" />
  </resultMap>

  <select id="getAllTask" resultType="com.teak.business.model.SysScheduledTask">
      select *
      from sys_scheduled_task
  </select>
  <select id="findByStatus" resultType="com.teak.business.model.SysScheduledTask">
      select *
      from sys_scheduled_task
      where status = #{status}
        and is_deleted = 0;
  </select>

</mapper>